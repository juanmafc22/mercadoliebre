            <h3 class="main__titulares">Las <%= categorias.length %>  categorias de los productos en venta</h3>
            
            <div class="main__texto-categorias">

                    <% categorias.forEach( categoria => { %>
                        <a class="a__link-gral" href="/productos/categorias/<%= categoria %>"><p class="main__parrafos"><%= categoria %></p></a>
                    <% }) %> 

            </div> 
        </section>
    </main>

    <%- include("../partials/footer") %>
    
    
